{
    "env": {
        "browser": true,
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react/jsx-runtime"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks"
    ],
    "rules": {
        "react-hooks/exhaustive-deps": "off", // Checks effect dependencies
        "react/prop-types": [0,{}],
        "indent": ["error", "tab"],
        "no-mixed-spaces-and-tabs": ["error", "smart-tabs"]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
